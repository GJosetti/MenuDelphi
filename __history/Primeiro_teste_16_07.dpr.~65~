program Primeiro_teste_16_07;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

//Globals
var logado : Boolean;


procedure MostrarMenu;
begin

  WriteLn('');
  WriteLn(' -- Menu ---');
  WriteLn('| 1-Login   |');
  WriteLn('| 9-Sair    |');
  WriteLn(' -----------');

end;

procedure MostrarMenuCadastro;
begin

  WriteLn('');
  WriteLn(' ------- Menu --------');
  WriteLn('| 1-Adicionar Usuário |');
  WriteLn('| 9-Logout              |');
  WriteLn(' ---------------------');

end;

 const senhaAdmin: String = 'Admin';
        usuarioAdmin:String = 'Admin';




function LoginValido(usuario,senha: String) :Boolean;
begin

    Result := false;
   if (usuario = usuarioAdmin) and (senha = senhaAdmin) then
   begin
    logado := true;
    result := true;

   end;

end;





var i :Integer;


procedure LoadView (n : Integer);
begin

  for i := 0 to (n - 1) do begin

          Sleep(500);
          Write('.') ;

  end;
          WriteLn;
          exit;


end;


//Variáveis Sair
var sair : Boolean;
procedure SairSistema;
begin

    Write('Saindo');

    LoadView(3);

    sair := true;


end;






   //Variaveis Main
  var senhaUsuario, loginUsuario, opcaoUsuario: String;
  var tentativas : Integer;








  begin

  tentativas := 0;
  sair := false;

  while sair = false do begin



    try

      //Menu
      MostrarMenu;
      //Pegar Input do usuário
      ReadLn(opcaoUsuario);

      if (opcaoUsuario = '1') then begin

        WriteLn('Digite seu usuário');
        ReadLn(loginUsuario);
        WriteLn('Digite sua senha');
        ReadLn(senhaUsuario);

        if LoginValido(loginUsuario,senhaUsuario) then
        begin

          Write('Login Realizado com sucesso');
          LoadView(5);


        end else begin

          Write('Login Inválido');
          LoadView(3);
          tentativas := tentativas + 1;


          if tentativas < 3 then
          begin
            continue;
          end else
          begin
            SairSistema;

          end;


        end;




      end else if (opcaoUsuario = '9') then
        begin


         SairSistema();


        end else begin

        WriteLn('Selecione uma Opção válida');
        continue;

        end;





          if logado then
          begin


            while logado do

            begin
              MostrarMenuCadastro;
              ReadLn(opcaoUsuario);

              if (opcaoUsuario = '1') then
              begin


              end else if (opcaoUsuario = '9') then
              begin

              logado := false;
              end;

            end;

        end;




    except
      on E: Exception do
        Writeln(E.ClassName, ': ', E.Message);
    end;

  end;






end.
